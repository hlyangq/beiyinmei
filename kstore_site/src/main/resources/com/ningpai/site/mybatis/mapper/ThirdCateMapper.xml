  <select id="selectProductCateList" parameterType="java.util.Map" resultMap="VoResultMap">
  	select <include refid="Base_Column_List"/> from np_third_cate where cat_delflag='0' and cat_id in 
  		<foreach collection="list" item="catId" open="(" close=")" separator="," >
