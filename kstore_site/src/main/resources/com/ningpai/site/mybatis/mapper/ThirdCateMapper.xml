  <!-- 查询所有的商品分类 -->
  <select id="queryAllThirdCate" resultMap="VoResultMap" parameterType="java.util.Map">
  	select <include refid="Base_Column_List"/> from np_third_cate where cat_delflag='0'
  	<if test="condition!=null and condition!='' and condition==1">
  		and cat_name like  CONCAT(CONCAT('%', #{searchText},'%')) 
  	</if>
  	<if test="condition==null or condition==''">
  		 and cat_parent_id='0'
  	</if>
  	and third_id = #{thirdId}
  	order by cat_sort
  </select>
  
