<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ningpai.system.dao.DistrictMapper" >
  <resultMap id="BaseResultMap" type="com.ningpai.system.bean.District" >
    <id column="district_id" property="districtId" jdbcType="BIGINT" />
    <result column="district_name" property="districtName" jdbcType="VARCHAR" />
    <result column="district_sort" property="districtSort" jdbcType="VARCHAR"/> 
    <result column="city_id" property="cityId" jdbcType="BIGINT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    <result column="del_flag" property="delFlag" jdbcType="CHAR" />
  </resultMap>
  <!-- VoResultMap -->
    <resultMap type="com.ningpai.system.vo.DistrictVo" id="voResultMap">
        <id column="district_id" property="districtId" jdbcType="BIGINT" />
        <result column="district_name" property="districtName" jdbcType="VARCHAR" />
        <result column="district_sort" property="districtSort" jdbcType="VARCHAR"/>
        <result column="city_id" property="cityId" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="del_flag" property="delFlag" jdbcType="CHAR" />
        <!--  <collection property="streets" column="district_id" javaType="ArrayList"
                ofType="com.ningpai.system.bean.Street" select="com.ningpai.system.dao.StreetMapper.queryStreetByDistrictId"></collection>-->
    </resultMap>
    <!-- containsStreetResultMap -->
    <resultMap type="com.ningpai.system.vo.DistrictVo" id="containsStreetResultMap">
        <id column="district_id" property="districtId" jdbcType="BIGINT" />
        <result column="district_name" property="districtName" jdbcType="VARCHAR" />
        <result column="district_sort" property="districtSort" jdbcType="VARCHAR"/>
        <result column="city_id" property="cityId" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="del_flag" property="delFlag" jdbcType="CHAR" />
        <collection property="streets" column="district_id" javaType="ArrayList"
                ofType="com.ningpai.system.bean.Street" select="com.ningpai.system.dao.StreetMapper.queryStreetByDistrictId"></collection>
    </resultMap>
  <!-- 地区帮助BeanResultMap -->
  <resultMap type="com.ningpai.system.util.AddressUtil" id="addressUtilResultMap">
  	<result column="province_name" property="provinceName" jdbcType="VARCHAR" />
  	<result column="city_name" property="cityName" jdbcType="VARCHAR" />
  	<result column="district_name" property="districtName" jdbcType="VARCHAR" />
  	<result column="district_sort" property="sort" jdbcType="VARCHAR"/> 
  	<result column="street_name" property="streetName" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    district_id, district_name, district_sort,city_id, create_time, modify_time, del_flag
  </sql>
  <!-- 根据主键查询 -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from np_sys_district
    where district_id = #{districtId,jdbcType=BIGINT}
  </select>
  <!-- 根据主键删除 -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    update np_sys_district set del_flag='1' where district_id = #{districtId,jdbcType=BIGINT}
  </delete>
  <!-- 添加记录 -->
  <insert id="insertSelective" parameterType="com.ningpai.system.bean.District" >
    insert into np_sys_district
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="districtId != null" >
        district_id,
      </if>
      <if test="districtName != null" >
        district_name,
      </if>
      <if test="districtSort != null" >
        district_sort,
      </if>
      <if test="cityId != null" >
        city_id,
      </if>
        create_time,
      <if test="modifyTime != null" >
        modify_time,
      </if>
      <if test="delFlag != null" >
        del_flag,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="districtId != null" >
        #{districtId,jdbcType=BIGINT},
      </if>
      <if test="districtName != null" >
        #{districtName,jdbcType=VARCHAR},
      </if>
      <if test="districtSort != null" >
        #{districtSort,jdbcType=VARCHAR},
      </if>
      <if test="cityId != null" >
        #{cityId,jdbcType=BIGINT},
      </if>
      NOW(),
      <if test="modifyTime != null" >
        #{modifyTime,jdbcType=TIMESTAMP},
      </if>
      <if test="delFlag != null" >
        #{delFlag,jdbcType=CHAR},
      </if>
    </trim>
  </insert>
  <!-- 更新记录 -->
  <update id="updateByPrimaryKeySelective" parameterType="com.ningpai.system.bean.District" >
    update np_sys_district
    <set >
      <if test="districtName != null" >
        district_name = #{districtName,jdbcType=VARCHAR},
      </if>
      <if test="districtSort != null" >
        district_sort = #{districtSort,jdbcType=VARCHAR},
      </if>
      <if test="cityId != null" >
        city_id = #{cityId,jdbcType=BIGINT},
      </if>
      <if test="createTime != null" >
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
        modify_time = NOW(),
      <if test="delFlag != null" >
        del_flag = #{delFlag,jdbcType=CHAR},
      </if>
    </set>
    where district_id = #{districtId,jdbcType=BIGINT}
  </update>
  <!-- 根据参数查询行数 -->
  <select id="queryTotalCount" parameterType="java.util.Map" resultType="java.lang.Integer">
  	select count(district_id) from np_sys_district where del_flag='0' 
  </select>
  <!-- 根据分页参数和查询参数查询列表 -->
  <select id="queryDistrictListByPb" parameterType="java.util.Map" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from np_sys_district where del_flag='0'
      <if test="null!= districtName and districtName!=''">
          and district_name like CONCAT(CONCAT('%',#{districtName}),'%')
      </if>
      <if test="null!= cityId and cityId!=''">
          and city_id = #{cityId}
      </if>
  	order by district_sort
  	limit #{startRowNum},#{endRowNum}
  </select>
  <!-- 根据城市ID查询区县的列表 -->
  <select id="queryDistrictListByCityId" parameterType="java.lang.Long" resultMap="voResultMap">
  	select <include refid="Base_Column_List"/> from np_sys_district where del_flag='0' and city_id=#{cityId}
  	order by district_sort
  </select>
    <!-- 根据城市ID查询区县的列表 -->
    <select id="queryDistrictListByCityIdNew" parameterType="java.lang.Long" resultMap="containsStreetResultMap">
        select <include refid="Base_Column_List"/> from np_sys_district where del_flag='0' and city_id=#{cityId}
        order by district_sort
    </select>
  <!-- 根据城市名称查询是否存在 -->
  <select id="queryDistrictByDistrictName" parameterType="java.util.Map" resultType="java.lang.Integer">
  	select count(district_id) from np_sys_district where del_flag='0' and city_name=#{cityName}
  </select>
  <!-- 根据区县ID查询所属的城市和省份名称 -->
  <select id="queryAddressNameByDistrictId" parameterType="java.lang.Long" resultMap="addressUtilResultMap">
  	select p.province_name,c.city_name,d.district_name,d.district_sort from np_sys_province p,np_sys_city c,np_sys_district d
	where c.province_id=p.province_id and d.city_id=c.city_id and d.district_id=#{districtId}
  </select>

    <!-- 根据区县名称和城市id查询该区县名称是否已存在 -->
    <select id="queryDistrictNameCount" parameterType="com.ningpai.system.bean.District" resultType="java.lang.Integer">
        select count(1) from np_sys_district
        where del_flag = '0' and district_name = #{districtName,jdbcType=VARCHAR} and city_id = #{cityId,jdbcType=BIGINT}
    </select>

</mapper>