        <dependency>
            <groupId>com.ningpai</groupId>
            <artifactId>kstore_goods</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.ningpai</groupId>
            <artifactId>kstore_system</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.ningpai</groupId>
            <artifactId>kstore_information</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
